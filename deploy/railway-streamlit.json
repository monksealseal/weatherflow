{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install --no-cache-dir torch --index-url https://download.pytorch.org/whl/cpu && pip install -r streamlit_app/requirements.txt && pip install -e ."
  },
  "deploy": {
    "startCommand": "streamlit run streamlit_app/Home.py --server.port $PORT --server.address 0.0.0.0 --server.headless true --browser.gatherUsageStats false",
    "healthcheckPath": "/_stcore/health",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1
  }
}
